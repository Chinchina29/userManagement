<head>
  <meta http-equiv="Cache-Control" content="no-store, no-cache, must-revalidate, private">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Expires" content="0">
  <link rel="stylesheet" href="/style.css">
</head>

<section class="container">
  <div class="form-wrapper">
    <div class="circle circle-one"></div>
    <div class="login-container">
      <div class="form-container">
        <h1 class="opacity">Edit User</h1>

        <% if (typeof message !== 'undefined') { %>
          <h4 class="opacity" style="color: rgb(243, 12, 12);"><%= message %></h4>
        <% } %>

        <form action="" method="post">
          <input type="text" name="name" placeholder="Enter Name" value="<%= user.name %>" required />
          <input type="email" name="email" placeholder="Enter Email" value="<%= user.email %>" required />

          <div class="radio-group opacity">
 
</div>


          <input type="hidden" name="id" value="<%= user._id %>" />
          <button class="opacity" type="submit">Update User</button>
        </form>

        <div class="back-link opacity">
          <a href="/admin/dashboard">Back to Dashboard</a>
        </div>
      </div>
    </div>
    <div class="circle circle-two"></div>
  </div>
</section>

<script src="/javascript.js"></script>
<script src="/adminCacheControl.js"></script>
